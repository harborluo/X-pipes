<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.harbor.game">

    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.harbor.game.application.GameApplication"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/FullscreenTheme"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.GameActivity"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="game" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.MusicService"
            android:enabled="true"
            android:exported="false"
            android:process=":services">
            <intent-filter>
                <action android:name="com.harbor.game.service.MusicService" />
                <!-- category android:name="android.intent.category.DEFAULT" / -->
            </intent-filter>
        </service>

        <activity
            android:name=".activity.HelpActivity"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name=".activity.LoadGameActivity"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name=".activity.SettingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme">
        </activity>

        <activity android:name=".activity.GameLevelActivity"
                  android:theme="@style/FullscreenTheme">
        </activity>

    </application>

</manifest>