<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/game_fg_color" />
            <solid android:color="@color/game_font_color"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/game_fg_color" />

            <gradient android:angle="-90" android:startColor="@color/game_bg_color" android:endColor="@color/game_bg_color" />

        </shape>
    </item>

</selector>